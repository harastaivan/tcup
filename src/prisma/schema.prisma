// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

enum ContestStatus {
  NOT_PUBLISHED
  PUBLISHED
  ARCHIVED
}

model Contest {
  year          Int           @id
  name          String
  soaringSpotId Int
  startDate     DateTime
  endDate       DateTime
  status        ContestStatus @default(NOT_PUBLISHED)
}
